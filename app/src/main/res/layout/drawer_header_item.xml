<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/almost_black"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_main_holder">

        <ImageView
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_marginLeft="16px"
            android:layout_marginTop="28px"
            android:layout_marginBottom="28px"
            android:layerType="software"
            android:id="@+id/circleView"
            android:layout_centerVertical="true" />

        <com.iam.herbaldairy.widget.text.Text
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"

            android:layout_centerVertical="true"
            android:text="Herb Dairy"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/circleView" />

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:id="@+id/icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:id="@+id/frame"
        android:layout_below="@+id/header_main_holder">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_options" />
    </FrameLayout>

</RelativeLayout>