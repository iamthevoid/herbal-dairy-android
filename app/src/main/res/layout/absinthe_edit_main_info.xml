<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:met_floatingLabelTextColor="@color/almost_black"
            app:met_bottomTextSize="16dp"
            app:met_primaryColor="@color/dark_green"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextSize="14sp"
            app:met_textColorHint="@color/black"
            android:id="@+id/startdate"
            android:hint="START DATE (dd-MM-yyyy)"
            android:layout_below="@+id/spirit"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/setStartTime" />
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:id="@+id/setStartTime"
            android:text="NOW"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:met_floatingLabelTextColor="@color/almost_black"
            app:met_bottomTextSize="16dp"
            app:met_primaryColor="@color/dark_green"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextSize="14sp"
            app:met_textColorHint="@color/black"
            android:id="@+id/distilldate"
            android:hint="DISTILL DATE (dd-MM-yyyy)"
            android:layout_below="@+id/spirit"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/setDistillTime" />
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:id="@+id/setDistillTime"
            android:text="NOW"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:met_floatingLabelTextColor="@color/almost_black"
            app:met_bottomTextSize="16dp"
            app:met_primaryColor="@color/dark_green"
            app:met_floatingLabel="highlight"
            android:inputType="numberDecimal"
            app:met_floatingLabelTextSize="14sp"
            app:met_textColorHint="@color/black"
            android:id="@+id/spiritvolume"
            android:hint="SPIRIT VOLUME"
            android:layout_below="@+id/spirit"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/setDistillTime" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:met_floatingLabelTextColor="@color/almost_black"
            app:met_bottomTextSize="16dp"
            app:met_primaryColor="@color/dark_green"
            app:met_floatingLabel="highlight"
            android:inputType="numberDecimal"
            app:met_floatingLabelTextSize="14sp"
            app:met_textColorHint="@color/black"
            android:id="@+id/resultvolume"
            android:hint="RESULT VOLUME"
            android:layout_below="@+id/spirit"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/setDistillTime" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:met_floatingLabelTextColor="@color/almost_black"
            app:met_bottomTextSize="16dp"
            app:met_primaryColor="@color/dark_green"
            app:met_floatingLabel="highlight"
            android:inputType="numberDecimal"
            app:met_floatingLabelTextSize="14sp"
            app:met_textColorHint="@color/black"
            android:id="@+id/alcpercent"
            android:hint="ALC PERCENT"
            android:layout_below="@+id/spirit"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/setDistillTime" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:met_floatingLabelTextColor="@color/almost_black"
            app:met_bottomTextSize="16dp"
            app:met_primaryColor="@color/dark_green"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextSize="14sp"
            app:met_textColorHint="@color/black"
            android:id="@+id/distillTemperature"
            android:hint="DISTILL T(C)"
            android:layout_below="@+id/spirit"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/setDistillTime" />

    </LinearLayout>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:met_floatingLabelTextColor="@color/almost_black"
        app:met_bottomTextSize="16dp"
        app:met_primaryColor="@color/dark_green"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="14sp"
        app:met_textColorHint="@color/black"
        android:id="@+id/comment"
        android:hint="COMMENT"
        android:layout_below="@+id/spirit"
        android:textSize="14sp"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/setDistillTime" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:met_floatingLabelTextColor="@color/almost_black"
        app:met_bottomTextSize="16dp"
        app:met_primaryColor="@color/dark_green"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="14sp"
        app:met_textColorHint="@color/black"
        android:id="@+id/name"
        android:hint="NAME"
        android:layout_below="@+id/comment"
        android:textSize="14sp"
        android:layout_weight="1"/>


</LinearLayout>